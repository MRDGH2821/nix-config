{
  "[nix]": {
    "editor.defaultFormatter": "kamadorueda.alejandra"
  },
  "bashIde.enableSourceErrorDiagnostics": true,
  "bashIde.shfmt.simplifyCode": true,
  "conventionalCommits.scopes": [
    "cspell",
    "devshell",
    "features",
    "hosts",
    "hosts/home-lab",
    "packages",
    "secrets",
    "services",
    "shell",
    "variables",
    "vscode"
  ],
  "deno.enablePaths": ["./nix/modules/container-services/bewcloud/"],
  "files.associations": {
    ".envrc": "shellscript",
    ".envrc.local": "shellscript"
  },
  "git.diagnosticsCommitHook.enabled": true,
  "git.enableCommitSigning": true,
  "git.followTagsWhenSync": true,
  "git.mergeEditor": true,
  "git.verboseCommit": true,
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "terminal.integrated.profiles.linux": {
    "nix-homelab shell": {
      "args": [
        "Bose-Game-Homelab",
        "-t",
        "$SHELL -l -c 'cd /etc/nixos/persist/nix-config && git pull && exec $SHELL -l'"
      ],
      "icon": "server-environment",
      "overrideName": true,
      "path": "ssh"
    }
  },
  "vscode-just.formatOnSave": true,
  "vscode-just.runInTerminal": true,
  "vscode-just.useSingleTerminal": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/chri11g6/sops-schema/refs/heads/master/sops.schema.json": [
      ".sops.yaml"
    ]
  }
}
