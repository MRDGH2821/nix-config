{
  "[nix]": {
    "editor.defaultFormatter": "kamadorueda.alejandra"
  },
  "bashIde.enableSourceErrorDiagnostics": true,
  "bashIde.shfmt.simplifyCode": true,
  "conventionalCommits.scopes": [
    "cspell",
    "devshell",
    "disko",
    "features",
    "hosts",
    "hosts/home-lab",
    "packages",
    "scalpel",
    "secrets",
    "services",
    "vscode"
  ],
  "files.associations": {
    ".envrc": "shellscript",
    ".envrc.local": "shellscript"
  },
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "terminal.integrated.profiles.linux": {
    "bash - nix-homelab": {
      "args": [
        "Bose-Game-Homelab",
        "-t",
        "bash -l -c 'cd /etc/nixos/persist/nix-config && git pull &&exec bash -l'"
      ],
      "icon": "terminal-bash",
      "path": "ssh"
    }
  },
  "yaml.schemas": {
    "https://raw.githubusercontent.com/chri11g6/sops-schema/refs/heads/master/sops.schema.json": [
      ".sops.yaml"
    ]
  }
}
