{
  "tasks": [
    {
      "args": [
        "-include_env_files=true",
        "-env_files_only=true",
        "-runtime",
        "docker",
        "-inputs",
        "${file}",
        "-output",
        "docker-compose.nix",
        "-root_path",
        "/etc/nixos/persist/${fileDirnameBasename}"
      ],
      "command": "compose2nix",
      "detail": "Generates docker-compose.nix from docker-compose.yml using compose2nix",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "Generate docker-compose.nix",
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "clear": false,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "command": "EDITOR='code --wait' sops ${file}",
      "label": "Open SOPS Encrypted file",
      "type": "shell"
    },
    {
      "command": "nix flake check",
      "group": "test",
      "label": "Nix flake check",
      "type": "shell"
    },
    {
      "args": ["${workspaceFolder}/nix-cmds.sh"],
      "command": "bash",
      "dependsOn": ["Nix flake check"],
      "group": "build",
      "label": "Deploy Flake",
      "type": "shell"
    },
    {
      "command": "cat ${workspaceFolder}/justfile | just-formatter | sponge ${workspaceFolder}/justfile",
      "label": "Format Just file",
      "type": "shell"
    }
  ],
  "version": "2.0.0"
}
