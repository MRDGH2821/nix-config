{
  "overrides": [
    {
      "files": ["*.jsonc", "*.json"],
      "options": {
        "parser": "json",
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.toml"],
      "options": {
        "parser": "toml",
        "reorderKeys": true,
        "trailingComma": "none"
      }
    }
  ],
  "plugins": ["prettier-plugin-toml"],
  "tabWidth": 2,
  "useTabs": false
}
