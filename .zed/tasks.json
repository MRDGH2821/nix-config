[
  {
    "allow_concurrent_runs": false,
    "args": [
      "-include_env_files=true",
      "-env_files_only=true",
      "-inputs",
      "$ZED_FILE",
      "-output",
      "podman-compose.nix",
      "-root_path",
      "/etc/nixos/persist/"
    ],
    "command": "compose2nix",
    "cwd": "$ZED_DIRNAME",
    "hide": "on_success",
    "label": "Generate podman-compose.nix",
    "shell": "system"
  },
  {
    "args": ["$ZED_FILE"],
    "command": "sops",
    "env": {
      "EDITOR": "zed --wait"
    },
    "label": "Open SOPS Encrypted file",
    "shell": "system"
  }
]
